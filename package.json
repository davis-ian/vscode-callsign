{
    "name": "callsign",
    "displayName": "Callsign â€“ OpenAPI Client & Explorer",
    "description": "Explore, test, and generate code from OpenAPI specs directly in VS Code. A fast, native Swagger UI alternative for frontend and full-stack devs.",
    "publisher": "ian-davis",
    "icon": "media/icon.png",
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "node": ">=22.16.0",
        "vscode": "^1.100.0"
    },
    "author": {
        "name": "Ian Davis"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/davis-ian/vscode-callsign"
    },
    "categories": [
        "Other",
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "openapi",
        "swagger",
        "api",
        "rest",
        "http client",
        "api testing",
        "swagger vscode",
        "api explorer",
        "codegen",
        "mock server",
        "typescript",
        "axios",
        "frontend",
        "postman",
        "explorer",
        "http",
        "client"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "callsign",
                    "title": "Callsign",
                    "icon": "media/activity-bar-icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "callsign.addSpecUrl",
                "title": "Add Spec Url",
                "category": "Callsign"
            },
            {
                "command": "callsign.deleteSpecUrlFromSettings",
                "title": "Delete Spec Url",
                "category": "Callsign"
            },
            {
                "command": "callsign.openSettings",
                "title": "Open Settings",
                "category": "Callsign"
            },
            {
                "command": "callsign.loadRoutesFromSavedSpec",
                "title": "Load Routes from Spec",
                "category": "Callsign"
            },
            {
                "command": "callsign.quickSearchRoutes",
                "title": "Search Routes",
                "category": "Callsign"
            },
            {
                "command": "callsign.openHistoryPage",
                "title": "Request History",
                "category": "Callsign"
            },
            {
                "command": "callsign.generateCode",
                "title": "Generate API Client",
                "category": "Callsign"
            },
            {
                "command": "callsign.showLogs",
                "title": "Show Logs",
                "category": "Callsign"
            },
            {
                "command": "callsign.pinRoute",
                "title": "Pin Route",
                "category": "Callsign"
            },
            {
                "command": "callsign.unpinRoute",
                "title": "Unpin Route",
                "category": "Callsign"
            },
            {
                "command": "callsign.copyAsCurl",
                "title": "Copy as cURL",
                "category": "Callsign"
            },
            {
                "command": "callsign.listStoredAuth",
                "title": "Manage Auth Headers",
                "category": "Callsign"
            },
            {
                "command": "callsign.clearStoredAuth",
                "title": "Clear All Auth Headers",
                "category": "Callsign"
            },
            {
                "command": "callsign.showCommands",
                "title": "Show Commands",
                "category": "Callsign"
            },
            {
                "command": "callsign.manageSpecs",
                "title": "Manage Specs",
                "category": "Callsign"
            }
        ],
        "views": {
            "callsign": [
                {
                    "id": "callsign.routes",
                    "name": "Routes"
                },
                {
                    "id": "callsign.history",
                    "name": "History"
                }
            ]
        },
        "keybindings": [
            {
                "command": "callsign.showCommands",
                "key": "ctrl+k ctrl+c",
                "win": "ctrl+k ctrl+c",
                "mac": "ctrl+k ctrl+c"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "callsign.pinRoute",
                    "when": "view == callsign.routes && viewItem == routeUnpinned"
                },
                {
                    "command": "callsign.unpinRoute",
                    "when": "view == callsign.routes && viewItem == routePinned"
                },
                {
                    "command": "callsign.copyAsCurl",
                    "when": "view == callsign.routes && viewItem == routePinned || viewItem == routeUnpinned",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "Callsign",
            "properties": {
                "callsign.specUrls": {
                    "type": "array",
                    "default": [],
                    "description": "List of OpenAPI spec URLs to use in Callsign.",
                    "items": {
                        "type": "object",
                        "required": [
                            "name",
                            "url"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "A label for this API"
                            },
                            "url": {
                                "type": "string",
                                "description": "The OpenAPI JSON URL"
                            }
                        }
                    }
                },
                "callsign.historyLimit": {
                    "type": "number",
                    "default": 20,
                    "minimum": 5,
                    "maximum": 500,
                    "description": "Maximum number of requests to store in Callsign's request history."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "dev": "npm-run-all -p dev:ui dev:ext",
        "dev:ui": "cd ui && npm run dev",
        "dev:ext": "cross-env NODE_ENV=development node esbuild.js --watch",
        "build:ui": "cd ui && npm run build",
        "build:ext": "npm run compile",
        "build-all": "npm run build:ui && npm run build:ext"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.19.0",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "@vue/tsconfig": "^0.7.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.25.3",
        "eslint": "^9.25.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3",
        "vue-tsc": "^2.2.10"
    },
    "dependencies": {
        "pinia": "^3.0.3",
        "uuid": "^11.1.0"
    }
}
